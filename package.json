{
  "name": "node-pi",
  "version": "0.1.0",
  "description": "run nodejs on raspberry pi, auto-updating to git master branch",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "npm-run-all --parallel dev:build dev:start",
    "dev:build": "tsc --watch",
    "dev:start": "nodemon dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitofant/node-pi.git"
  },
  "author": "joerantesse@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitofant/node-pi/issues"
  },
  "homepage": "https://github.com/bitofant/node-pi#readme",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "standalone-logger": "^1.0.16"
  }
}
